<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/apk/res-auto">

    <data class=".MainActivityBinding">

        <import type="com.example.saurabh.databinding.User" />

        <variable
            name="handler"
            type="com.example.saurabh.databinding.MyHandlers" />

        <import type="java.util.List" />

        <variable
            name="users"
            type="List&lt;User&gt;" />

        <variable
            name="usersmap"
            type="java.util.Map&lt;Integer,User&gt;" />

        <import type="android.view.View" />
    </data>

    <LinearLayout xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.example.saurabh.databinding.MainActivity">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <include
                layout="@layout/button"
                bind:handler="@{handler}"
                bind:user="@{users[0]}" />

            <include
                layout="@layout/button"
                bind:handler="@{handler}"
                bind:user="@{users[1]}" />

            <include
                layout="@layout/button"
                bind:handler="@{handler}"
                bind:user="@{users[2]}" />

            <include
                layout="@layout/button"
                bind:handler="@{handler}"
                bind:user="@{users[3]}" />

            <include
                layout="@layout/button"
                bind:handler="@{handler}"
                bind:user="@{users[4]}" />

            <include
                layout="@layout/button"
                bind:handler="@{handler}"
                bind:user="@{users[5]}" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <include
                layout="@layout/button"
                bind:handler="@{handler}"
                bind:user="@{usersmap[0]}" />

            <include
                layout="@layout/button"
                bind:handler="@{handler}"
                bind:user="@{usersmap[1]}" />

            <include
                layout="@layout/button"
                bind:handler="@{handler}"
                bind:user="@{usersmap[2]}" />

            <include
                layout="@layout/button"
                bind:handler="@{handler}"
                bind:user="@{usersmap[3]}" />

            <include
                layout="@layout/button"
                bind:handler="@{handler}"
                bind:user="@{usersmap[4]}" />

            <include
                layout="@layout/button"
                bind:handler="@{handler}"
                bind:user="@{usersmap[5]}" />
        </LinearLayout>


    </LinearLayout>
</layout>
